<link rel="stylesheet" href="/dist/css/event.css" />
<link rel="stylesheet" href="/dist/css/popup.css">
<style>
    .nameEvent{
    height: 70px !important;
    overflow: auto;
  }
    .wrap {
    flex: 1;
    margin: auto;
    margin-bottom: 5px;
    border: 1px solid #36304a;
    border-radius: 5px;
    overflow: hidden;
    }

    .container {
    display: block;
    width: 100%;
    
    overflow-x: auto;
    }

    .text-nowrap {
    white-space: nowrap;
    }

    table tr td {
    padding: 10px 20px;
    background: white;
    max-height: 30px;
    overflow-wrap: break-word;
    overflow-y: auto;
    }

    table tr th {
    padding: 20px;
    /* color: white; */
    background: white;
    text-align: center;
    }

    table tr td:nth-child(2),
    table tr th:nth-child(2) {
    min-width: 100px;
    position: sticky;
    left: 0;
    z-index: 9;
    }
</style>
<%- contentFor('body') %>
    <div class="row">
        <div class="col-4" style="padding-bottom: 1rem">
            <label class="margin-top">Session</label>
            <select class="form-control" onchange="search1()" id="idSearch">
                <option value=''>--Chọn session--</option>
                <% for(let i= 0 ; i <event.session.length; i++){ %>
                    <option value="<%=event.session[i].id %>"><%= new Date(event.session[i].day).toLocaleDateString()%></option>
                <% } %>
            </select>
        </div>
        <div class="col-8" style="padding-bottom: 1rem">
            <a href="#" class="btn btn-primary
                btn-themmoi" onclick="search1()"
                style="position: absolute; top: 2rem;
                display: block">
                <i class="fas fa-search"></i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12" style="margin: auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Danh sách người
                        tham gia <%=event.name %></h3>
                        <!-- <a href="./ThemPhieuYeuCau.aspx" class="btn bg-gradient-success btn-themmoi"><i class="fas fa-plus"></i></a> -->
                    </div>
                    <div class="card-body p-0" style="width:
                        auto; overflow-x:
                        auto;">
                        <div class="wrap">
                            <div class="container">
                        <table class="table table-bordered"
                            id="idDataTable">
                            <thead>
                                <tr>
                                    <th style="max-width: 50px">#</th>
                                    <th>Tên người tham gia</th>
                                    <th>Email</th>
                                    <th>Giới tính</th>
                                    <th>Số điện thoại</th>
                                    <th>Số lượng session</th>
                                    <th>Thời gian đăng kí</th>
                                    <th>Mã QR</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        </div></div>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
    </div>

    
    <div id="lightOrderDetail" class="white_content" style="width: 80%;
    left: 10%; top: 10%!important; height: 80vh; overflow-y: scroll;">
    <div class="box" style="position: relative;">
        <div style="position: absolute; top: 3px; right: 3px; font-size: 37px; color: red; cursor: pointer;" onclick="document.getElementById('lightOrderDetail').style.display=
        'none'; document.getElementById('fadeOrderDetail').style.display=
        'none'; $('#OrderDetail').text('');">X</div>
        <div class="box-body">
            <div class="titlePouple" style="text-align: center;
                font-size: 2rem; width: 100%; height: auto!important;overflow-x: scroll;" id="idTitlePopup">Thêm thông tin</div>
            <div id="OrderDetail" style="padding: 10px; text-align:
                center">

                <!-- <div class="box-footer" style="margin-top: 2rem;">
                    <a class="btn btn-primary" id='buttonSave'>Xác nhận
                    </a>
                </div> -->
            </div>
        </div>
    </div>
    </div>
    <div id="fadeOrderDetail"
        onclick="document.getElementById('lightOrderDetail').style.display=
        'none'; document.getElementById('fadeOrderDetail').style.display=
        'none'; $('#OrderDetail').text('');" class="black_overlay">
    </div>


    <script src='/js/applyEvent.js?ver=132'></script>
    <script src='/js/search.js?ver=132' async></script>
    <script>
        $(document).ready(function () {
            TaoDataTable("idDataTable", GetColumnsForDatatable(9)).then(() => {
                SettingSearch();
            });
        });
    </script>
